{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "target": "ES2019",
    "baseUrl": ".",
    "paths": {
      "@data/*":["./src/data/*"],
      "@domain/*":["./src/domain/*"],
      "@presentation/*":["./src/presentation/*"],
      "@utils/*":["./src/utils/*"],
      "@infra/*":["./src/infra/*"],
      "@main/*":["./src/main/*"]
    },
    "esModuleInterop": true,
    "allowJs": true
  }
}